<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.1" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:bridge="http://jboss.org/xml/ns/bridge/bridge-extension"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">
    <name>JBossPortletBridge</name>
    <ordering>
        <before>
            <others />
        </before>
    </ordering>
    <application>
        <el-resolver>org.jboss.portletbridge.el.PortletELResolver</el-resolver>
        <view-handler>org.jboss.portletbridge.application.PortletViewHandler</view-handler>
        <resource-handler>org.jboss.portletbridge.application.resource.PortletResourceHandler</resource-handler>
        <system-event-listener>
            <system-event-listener-class>org.jboss.portletbridge.config.FacesConfigProcessor</system-event-listener-class>
            <system-event-class>javax.faces.event.PostConstructApplicationEvent</system-event-class>
        </system-event-listener>
    </application>
    <lifecycle>
        <phase-listener>org.jboss.portletbridge.lifecycle.HeadResourcesPhaseListener</phase-listener>
    </lifecycle>
    <factory>
        <application-factory>org.jboss.portletbridge.application.PortletApplicationFactoryImpl</application-factory>
        <exception-handler-factory>org.jboss.portletbridge.context.exception.PortletExceptionHandlerFactoryImpl</exception-handler-factory>
        <external-context-factory>org.jboss.portletbridge.context.PortletExternalContextFactoryImpl</external-context-factory>
        <view-declaration-language-factory>org.jboss.portletbridge.application.view.PortletVdlFactoryImpl</view-declaration-language-factory>
        <partial-view-context-factory>org.jboss.portletbridge.context.PortletPartialViewContextFactoryImpl</partial-view-context-factory>
        <factory-extension>
            <bridge:bridge-config-factory>org.jboss.portletbridge.bridge.factory.BridgeConfigFactoryImpl
            </bridge:bridge-config-factory>
            <bridge:bridge-context-factory>org.jboss.portletbridge.bridge.factory.BridgeContextFactoryImpl
            </bridge:bridge-context-factory>
            <bridge:bridge-controller-factory>org.jboss.portletbridge.bridge.factory.BridgeControllerFactoryImpl
            </bridge:bridge-controller-factory>
            <bridge:bridge-logger-factory>org.jboss.portletbridge.bridge.factory.BridgeLoggerFactoryImpl
            </bridge:bridge-logger-factory>
            <bridge:bridge-request-scope-manager-factory>org.jboss.portletbridge.bridge.factory.BridgeRequestScopeManagerFactoryImpl
            </bridge:bridge-request-scope-manager-factory>
            <bridge:bridge-request-scope-factory>org.jboss.portletbridge.bridge.factory.BridgeRequestScopeFactoryImpl
            </bridge:bridge-request-scope-factory>
        </factory-extension>
    </factory>
    <component>
        <component-type>javax.faces.ViewRoot</component-type>
        <component-class>javax.portlet.faces.component.PortletNamingContainerUIViewRoot</component-class>
    </component>
    <component>
        <component-type>org.jboss.portletbridge.PortletActionURL</component-type>
        <component-class>org.jboss.portletbridge.component.PortletActionURL</component-class>
    </component>
    <component>
        <component-type>org.jboss.portletbridge.PortletNamespace</component-type>
        <component-class>org.jboss.portletbridge.component.PortletNamespace</component-class>
    </component>
    <component>
        <component-type>org.jboss.portletbridge.PortletParam</component-type>
        <component-class>org.jboss.portletbridge.component.PortletParam</component-class>
    </component>
    <component>
        <component-type>org.jboss.portletbridge.PortletProperty</component-type>
        <component-class>org.jboss.portletbridge.component.PortletProperty</component-class>
    </component>
    <component>
        <component-type>org.jboss.portletbridge.PortletRenderURL</component-type>
        <component-class>org.jboss.portletbridge.component.PortletRenderURL</component-class>
    </component>
    <component>
        <component-type>org.jboss.portletbridge.PortletResourceURL</component-type>
        <component-class>org.jboss.portletbridge.component.PortletResourceURL</component-class>
    </component>
    <render-kit>
        <render-kit-id>HTML_BASIC</render-kit-id>
        <renderer>
            <description>Overrides the BodyRenderer that comes with the JSF implementation</description>
            <component-family>javax.faces.Output</component-family>
            <renderer-type>javax.faces.Body</renderer-type>
            <renderer-class>org.jboss.portletbridge.renderkit.portlet.PortletBodyRenderer</renderer-class>
        </renderer>
        <renderer>
            <description>Overrides the HeadRenderer that comes with the JSF implementation</description>
            <component-family>javax.faces.Output</component-family>
            <renderer-type>javax.faces.Head</renderer-type>
            <renderer-class>org.jboss.portletbridge.renderkit.portlet.PortletHeadRenderer</renderer-class>
        </renderer>
        <renderer>
            <component-family>javax.faces.Output</component-family>
            <renderer-type>org.jboss.portletbridge.PortletActionURLRenderer</renderer-type>
            <renderer-class>org.jboss.portletbridge.renderkit.tag.PortletActionURLRenderer</renderer-class>
        </renderer>
        <renderer>
            <component-family>javax.faces.Output</component-family>
            <renderer-type>org.jboss.portletbridge.PortletNamespaceRenderer</renderer-type>
            <renderer-class>org.jboss.portletbridge.renderkit.tag.PortletNamespaceRenderer</renderer-class>
        </renderer>
        <renderer>
            <component-family>javax.faces.Output</component-family>
            <renderer-type>org.jboss.portletbridge.PortletRenderURLRenderer</renderer-type>
            <renderer-class>org.jboss.portletbridge.renderkit.tag.PortletRenderURLRenderer</renderer-class>
        </renderer>
        <renderer>
            <component-family>javax.faces.Output</component-family>
            <renderer-type>org.jboss.portletbridge.PortletResourceURLRenderer</renderer-type>
            <renderer-class>org.jboss.portletbridge.renderkit.tag.PortletResourceURLRenderer</renderer-class>
        </renderer>
    </render-kit>
</faces-config>
